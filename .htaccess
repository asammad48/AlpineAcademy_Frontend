RewriteEngine On

# If your project is in a subfolder, update this:
# RewriteBase /yourfolder/

# ========================================
# 1. STATIC FILES - Serve directly
# ========================================
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|eot|pdf|zip|mp4|webm|txt|xml)$ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ========================================
# 2. EXACT FILE MATCHES - Serve directly
# ========================================
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ========================================
# 3. DIRECTORY INDEX - Serve index.html
# ========================================
# Spanish root
RewriteRule ^$ /index.html [L]

# Language directories
RewriteRule ^en/?$ /en/index.html [L]
RewriteRule ^fr/?$ /fr/index.html [L]
RewriteRule ^ca/?$ /ca/index.html [L]
RewriteRule ^pt/?$ /pt/index.html [L]

